{
  "plugins": ["./plugins/**/*.js", "ewiki"],
  "sources_folder": "./sources",
  "output_folder": "./dist",
  "ignore_sources": ["./**/*.ignore.md", "./node_modules/**/*.md"],
  "ignore_plugins": ["./**/*.ignore.js", "./node_modules/**/*.js"],
  "html_template": "./node_modules/ewiki/plugins/extra-widget/template.html",
  "styles": ["./style.css"],
  "markdown_mount": ".markdown-body",
  "markdown_it_config": {
    "xhtmlOut": false
  },
  "watcher": {
    "port": 3020,
    "base_url": "/"
  },
  "extra_widget_plugin": {
    "header_links": [
      {
        "text": "官网->",
        "href": "https://mclds.com"
      }
    ],
    "markdown_footer_template": "./templates/footer.html",
    "markdown_header_template": "./templates/header.html",
    "head_template": "./templates/head.html",
    "body_template": ""
  }
}
